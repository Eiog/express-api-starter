{
  "name": "express-ts-starter",
  "version": "1.0.0",
  "author": "xsrole",
  "main": "src/app.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "update-deps": "taze -w && pnpm i",
    "build": "tsc",
    "type": "tsc --noEmit",
    "start": "node dist/app.js",
    "pm2:setup": "pm2 deploy production setup",
    "pm2:deploy": "pm2 deploy production",
    "apidoc": "apidoc -i src/routes/ -o src/doc/"
  },
  "dependencies": {
    "config": "^3.3.9",
    "dayjs": "^1.11.7",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "md5": "^2.3.0",
    "mongoose": "^6.9.1",
    "pino": "^8.9.0",
    "pino-pretty": "^9.1.1",
    "zod": "^3.20.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.35.2",
    "@types/config": "^3.3.0",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/md5": "^2.3.2",
    "@types/node": "^18.13.0",
    "apidoc": "^0.53.1",
    "eslint": "^8.33.0",
    "taze": "^0.8.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  }
}
